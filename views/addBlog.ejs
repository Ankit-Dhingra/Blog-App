<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Add Blog Page</title>
    <link rel="stylesheet" href="/path/to/your/custom/styles.css"> <!-- You can link a custom stylesheet for further styling -->
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="m-0">Add New Blog</h3>
                    </div>
                    <div class="card-body">
                        <form action="/blog" method="post" enctype="multipart/form-data">
                            <!-- Cover Image -->
                            <div class="mb-4">
                                <label for="cover-image" class="form-label">Cover Image</label>
                                <input type="file" class="form-control" id="cover-image" name="cover-image" aria-describedby="title">
                            </div>

                            <!-- Title -->
                            <div class="mb-4">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title" aria-describedby="title" required>
                            </div>

                            <!-- Body -->
                            <div class="mb-4">
                                <label for="body" class="form-label">Body</label>
                                <textarea class="form-control" id="body" name="body" aria-describedby="body" rows="6" required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="mb-4">
                                <button type="submit" class="btn btn-primary w-100">Submit Blog</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
