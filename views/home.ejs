<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
    <link rel="stylesheet" href="/path/to/your/custom/styles.css"> <!-- Link to your custom CSS -->
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card shadow-sm border-light rounded">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top rounded-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title mb-3"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary stretched-link">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
